<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus:true, id:"inputTitle", placeholder:"タイトル" %>
  
  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, id:"inputOpinion", placeholder:"感想" %><br>
  
  <%= link_to 'Update Book', book_path %><br>
  <%= link_to 'Show',book_path %>|<%= link_to 'Back', books_path %>
<% end %>