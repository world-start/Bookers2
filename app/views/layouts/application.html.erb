<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'Bookers', root_path, class:"link" %>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown" style="">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li><i class="fas fa-home nav-link text-light"></i><%= link_to 'Home', user_path(current_user), class:"link" %></li>
                <li><i class="fas fa-users nav-link text-light"></i><%= link_to 'Users', users_path, class:"link" %></li>
                <li><i class="fas fa-book-open nav-link text-light"></i><%= link_to 'Books', books_path, class:"link" %></li>
                <li><i class="fas fa-sign-out-alt nav-link text-light"></i><%= link_to 'logout',destroy_user_session_path, method: :delete, class:"link" %></li>
                
              <% else %>
                <li><i class="fas fa-home nav-link text-light"></i><%= link_to 'Home', root_path, class:"link" %></li>
                <li><i class="fas fa-link nav-link text-light"></i><%= link_to 'About', home_about_path, class:"link" %></li>
                <li><i class="fas fa-user-plus nav-link text-light"></i><%= link_to 'sign up', new_user_registration_path, class:"link" %></li>
                <li><i class="fas fa-sign-in-alt nav-link text-light"></i><%= link_to 'login', new_user_session_path, class:"link" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
          
      
    </header>
    <!--book新規投稿,user情報更新のサクセスメッセージ部分-->
    <% if flash[:notice] %>
     <div class="flash">
       <%= flash[:notice] %>
     </div>
    <% end %> 
    

    
    
    <main><%= yield %></main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
   
  </body>
</html>
